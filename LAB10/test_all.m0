    si (numero >= 40) entonces
        escribir("El número es mayor o igual a 40");
    sino
        escribir("El número es menor que 40");
    fsi
    x := 10;
    y := 5;
    
    si (x > y) entonces
        resultado := x + y;
        escribir("x es mayor que y");
    sino
        resultado := y - x;
        escribir("y es mayor o igual que x");
    fsi
    
    escribir("El resultado es: ", resultado);
    
    mientras (resultado < 20) hacer
        resultado := resultado + 1;
        escribir("Incrementando resultado: ", resultado);
    fmientras
    
    si (x == 10) entonces
        escribir("x es igual a 10");
    fsi
    
    si (x != y) entonces
        escribir("x es diferente de y");
    fsi
fin